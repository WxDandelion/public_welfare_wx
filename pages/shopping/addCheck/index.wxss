}

.address-box .r image{
  width: 52.078rpx;
  height: 52.078rpx;
}

.coupon-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.coupon-box .coupon-item{
  width: 100%;
  height: 108.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding-left: 31.25rpx;
}

.coupon-box .l{
  flex: 1;
  height: 43rpx;
