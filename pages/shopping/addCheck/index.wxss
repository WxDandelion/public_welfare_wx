}

.address-box .m{
  flex: 1;
  height: 72.25rpx;
  color: #999;
}

.address-box .mobile{
  display: block;
  height: 29rpx;
  line-height: 29rpx;
  margin-bottom: 6.25rpx;
  font-size: 30rpx;
  color:#333;
}

.address-box .address{
  display: block;
  height: 37.5rpx;
  line-height: 37.5rpx;
  font-size: 25rpx;
  color:#666;
}

.address-box .r{
  width: 77rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
