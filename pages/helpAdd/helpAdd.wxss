.card,.weixin{color:#00A8FF;font-size:40rpx;position:absolute;top:1rpx;}
.cashdui{color:#FF3D3D;font-size:36rpx;float:right;}
.weixin{color:#3BAF34;}
.cash-text{margin-left:58rpx;}
